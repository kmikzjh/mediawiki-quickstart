web1:
  php_extensions:
    - mysql
    - eaccelerator
    - gd
  shared_writable_dirs:
    - cache
    - images
  after_build:
    - "mv pagoda/LocalSettings.php LocalSettings.php"
  before_deploy:
    # Import db schema sql file
    - "mysql -h $DB1_HOST --port $DB1_PORT -u $DB1_USER -p$DB1_PASS $DB1_NAME < /var/www/pagoda/demo-mediawiki.sql"

db1:
  name: cloud-db
  type: mysql
